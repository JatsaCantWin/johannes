@model JohannesWebApplication.Models.PrinterModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PrinterModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrinterID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Height [mm]
                <input asp-for="SizeX" class="form-control" />
                <span asp-validation-for="SizeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                Width [mm]
                <input asp-for="SizeY" class="form-control" />
                <span asp-validation-for="SizeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                Depth [mm]
                <input asp-for="SizeZ" class="form-control" />
                <span asp-validation-for="SizeZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="menu_text">Back to List</a>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
