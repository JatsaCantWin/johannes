@using JohannesWebApplication.Controllers
@using Microsoft.AspNetCore.Identity
@model JohannesWebApplication.Models.PrinterModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <h4>PrinterModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Width [mm]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeX)
        </dd>
        <dt class = "col-sm-2">
            Height [mm]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeY)
        </dd>
        <dt class = "col-sm-2">
            Depth [mm]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeZ)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div class="row">
        <a asp-action="Edit" asp-route-id="@Model?.PrinterID" class="menu_text_small">Edit</a>
        <a asp-action="Index" class="menu_text_small">Back to List</a>
    </div>
</div>
<div>
    @if ((string?) ViewData["PrinterAdded"] != "True")
    {
        <form asp-controller="PrinterModels" asp-route-id="@Model?.PrinterID" asp-action="AddPrinter" method="post">
            <button type="submit" value="Add Printer"></button>
        </form>
    }
    else
    {
        <form asp-controller="PrinterModels" asp-route-id="@Model?.PrinterID" asp-action="RemovePrinter" method="post">
            <button type="submit" value="Remove Printer"></button>
        </form>
    }
</div>
