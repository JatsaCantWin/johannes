@model IEnumerable<JohannesWebApplication.Models.PrinterModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="row_row">
    <a asp-action="Create" class="menu_text">Create New</a>
    @if (ViewData["Id"] != "0")
        {
            <a asp-action="Index" asp-route-id="0" class="menu_text">Show all printers</a>
        }
        @if (ViewData["Id"] != "1")
        {
            <a asp-action="Index" asp-route-id="1" class="menu_text">Show your printers</a>
        }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeZ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeZ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrinterID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrinterID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrinterID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
