@model JohannesWebApplication.Models.OrderModelVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Infill" class="control-label"></label>
                <input asp-for="Infill" class="form-control" />
                <span asp-validation-for="Infill" class="text-danger"></span>
            </div>
            <div class="form-group">
                File
                <input asp-for="PrintFile" type="file">
                <span asp-validation-for="PrintFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                Width [mm]
                <input asp-for="SizeX" class="form-control" />
                <span asp-validation-for="SizeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                Height [mm]
                <input asp-for="SizeY" class="form-control" />
                <span asp-validation-for="SizeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                Depth [mm]
                <input asp-for="SizeZ" class="form-control" />
                <span asp-validation-for="SizeZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

