@model IEnumerable<JohannesWebApplication.Models.OrderModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="row_row">
    <a asp-action="Create" class="menu_text">Create New</a>
    @if (ViewData["Id"] != "0")
    {
        <a asp-action="Index" asp-route-id="0" class="menu_text">Show all active offers</a>
    }
    @if (ViewData["Id"] != "1")
    {
        <a asp-action="Index" asp-route-id="1" class="menu_text">Show only offers from your city</a>
    }
    @if (ViewData["Id"] != "2")
    {
        <a asp-action="Index" asp-route-id="2" class="menu_text">Show all offers</a>
    }
</p>
<table class="table menu_text_small">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Infill)
        </th>
        <th>
            File
        </th>
        <th>
            Width [mm]
        </th>
        <th>
            Height [mm]
        </th>
        <th>
            Depth [mm]
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commisioner)
        </th>
        <th>
            City
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Infill)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrintFilePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeZ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Commisioner.UserName)
        </td>
        <td>
            @if (item.Commisioner.Address != null)
            {
                @Html.DisplayFor(modelItem => item.Commisioner.Address.City); 
            }
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
